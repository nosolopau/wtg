<%= form_for @scan, html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :gemfile, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :gemfile, class: 'field span12', rows: '20' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Create scan', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', scans_path, :class => 'btn' %>
  </div>
<% end %>
