<%= form_for @scan, html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :gemfile, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :gemfile, class: 'form-control span12', rows: '20' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Create scan', :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', scans_path, :class => 'btn' %>
    </div>
  </div>
<% end %>
